<beans:beans xmlns="http://www.springframework.org/schema/security"
  xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-4.2.xsd">

  <http entry-point-ref="customEntryPoint">
    <!-- The order of intercept-urls matters. Order them from more specific to more 
      general within the same url. Ej: /api/v1/admin/application/** before /api/v1/admin/** -->

    <intercept-url pattern="/admin/**" access="hasRole('ROLE_ADMIN')" method="GET" />

    <intercept-url pattern="/test-module/angular-1/**" access="hasRole('ROLE_USER')"
      method="GET" />

    <intercept-url pattern="/test-module/jsp/dragonball/users/**" access="permitAll"
      method="GET" />
    <intercept-url pattern="/test-module/jsp/dragonball/users/**" access="hasRole('ROLE_USER')"
      method="POST" />
    <intercept-url pattern="/test-module/jsp/dragonball/users/**" access="hasRole('ROLE_USER')"
      method="PUT" />
    <intercept-url pattern="/test-module/jsp/dragonball/users/**" access="hasRole('ROLE_USER')"
      method="DELETE" />

    <!-- ======================================================================================= -->
    <!-- Commons configuration. Everything from here downwards should be the same in all modules -->
    <!-- ======================================================================================= -->

    <intercept-url pattern="/api/v1/commons/**" access="hasRole('ROLE_ADMIN')" method="GET" />
    <intercept-url pattern="/api/v1/commons/**" access="hasRole('ROLE_ADMIN')" method="POST" />
    <intercept-url pattern="/api/v1/commons/**" access="hasRole('ROLE_ADMIN')" method="PUT" />
    <intercept-url pattern="/api/v1/commons/**" access="hasRole('ROLE_ADMIN')" method="DELETE" />

    <form-login login-page="/login"
                username-parameter="username"
                password-parameter="password"
                always-use-default-target="false"
                authentication-success-handler-ref="authenticationSuccessHandler" />
    <csrf disabled="true" />
  </http>

  <authentication-manager>
    <authentication-provider ref="applicationAuthenticationProvider" />
  </authentication-manager>

</beans:beans>